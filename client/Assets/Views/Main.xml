<Main>
  <Region Height="4.5%" Alignment="Bottom">
    <Image BackgroundColor="black"></Image>
    <ContainerView Id="Toolbar" NumInRow="{NumItemsInToolbar}" Alignment="Center"/>
  </Region>

  <Region Id="TabView" IsActive="False">
    <Image BackgroundColor="Red" Alpha="0.3"></Image>
    <Region Margin="25px">
      <ContainerView Id="Inventory" NumInRow="{NumItemsInToolbar}" Alignment="Left"/>
    </Region>
  </Region>
</Main>
