<Main>
  <Region Height="4.5%" Alignment="Bottom">
    <Image BackgroundColor="black"></Image>
    <ContainerView Id="Toolbar" NumInRow="{NumItemsInToolbar}" Alignment="Bottom"/>
  </Region>

  <Region Id="TabView" IsActive="False">
    <Image BackgroundColor="Red" Alpha="0.3"></Image>
    <Group Id="ContainerGroup" Margin="25px" Orientation="Vertical" Alignment="Left">
      <ContainerView Id="Inventory" ContainerName="Inventory" NumInRow="{NumItemsInToolbar}" />
    </Group>
  </Region>
</Main>
