<ContainerView>
  <Group Orientation="Vertical">
    <Label Id="ContainerNameLabel" Text="{ContainerName}" FontSize="15" AdjustToText="Height" Alignment="Left" />
    <List Id="Container" Style="ShowcaseList" Orientation="Horizontal" Items="{Items}" CanSelect="True" Spacing="3" Overflow="Wrap">
      <ListItem Id="Template" Width="35px" Height="35px" Selected-OutlineColor="Yellow" IsTemplate="True">
        <ItemView ItemInstance="{#Item}" Click="ClickHandler" />
      </ListItem>
    </List>
  </Group>
</ContainerView>
