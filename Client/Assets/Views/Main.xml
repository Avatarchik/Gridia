<Main>
  <Region Height="4.5%" Alignment="Bottom">
    <Image BackgroundColor="black"></Image>
    <ContainerView Id="Toolbar" Items="{ToolbarItems}" NumInRow="{NumItemsInToolbar}" Alignment="Center"/>
  </Region>

  <Region Id="TabView" Enabled="false">
    <Image BackgroundColor="Red" Alpha="0.3"></Image>
    <Region Margin="25px">
      <ContainerView Id="Inventory" Items="{InventoryItems}" NumInRow="{NumItemsInToolbar}" Alignment="Left"/>
    </Region>
  </Region>
</Main>
