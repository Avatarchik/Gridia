                <Label Style="ShowcaseListLabel" Text="18" Width="100%" Height="100%" TextAlignment="Center" />
              </Region>
            </FlowListItem>
          </FlowList>

          <Label Id="StaticFlowListItemClickLabel" Text="Selected item: " AdjustToText="Width" Alignment="BottomLeft" Offset="25,0,0,25" />
        </Tab>
        
      </TabPanel>
    </Group>
  </Frame>

</Showcase_FlowList>