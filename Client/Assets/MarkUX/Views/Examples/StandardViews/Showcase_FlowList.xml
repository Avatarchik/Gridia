<Showcase_FlowList>
  <Frame Style="ShowcasePanel">
    <Group Alignment="Top" Orientation="Vertical" Spacing="30px" Margin="60,30,60,30" ContentAlignment="Center">
      <Label Style="ShowcaseHeader" Text="FlowList" TextAlignment="Center" AdjustToText="Width" />
      <Label Style="ShowcaseDescription" Text="Arranges static or dynamic content in a flow direction." AdjustToText="Width" TextAlignment="Center" />

      <TabPanel Height="500px" Width="600px">
      
        <Tab Title="Dynamic" TabLength="200px">
          <FlowList Style="ShowcaseFlowList" Orientation="Horizontal" Items="{FlowListItems}" Width="100%" Height="100%" Margin="25px" Alignment="Top"
                    SelectionChanged="FlowListItemClicked" CanSelect="True">
            <FlowListItem Id="Template">
              <Region Style="ShowcaseListRegion" Width="{Item.Width}" Height="{Item.Height}">
                <Label Style="ShowcaseListLabel" Text="{Item.Index}" Width="100%" Height="100%" TextAlignment="Center" />
              </Region>
            </FlowListItem>
          </FlowList>

          <Label Id="FlowListItemClickLabel" Text="Selected item: " AdjustToText="Width" Alignment="BottomLeft" Offset="25,0,0,25" />
        </Tab>

        <Tab Title="Static" TabLength="150px">
          <FlowList Style="ShowcaseFlowList" Orientation="Vertical" Width="100%" Height="100%" Margin="25,25,25,75" Alignment="Left"
                    SelectionChanged="StaticFlowListItemClicked" CanSelect="True">
            <FlowListItem>
              <Region Style="ShowcaseListRegion" Width="80px" Height="80px">
                <Label Style="ShowcaseListLabel" Text="1" Width="100%" Height="100%" TextAlignment="Center" />
              </Region>
            </FlowListItem>
            <FlowListItem>
              <Region Style="ShowcaseListRegion" Width="120px" Height="80px">
                <Label Style="ShowcaseListLabel" Text="2" Width="100%" Height="100%" TextAlignment="Center" />
              </Region>
            </FlowListItem>
            <FlowListItem>
              <Region Style="ShowcaseListRegion" Width="80px" Height="120px">
                <Label Style="ShowcaseListLabel" Text="3" Width="100%" Height="100%" TextAlignment="Center" />
              </Region>
            </FlowListItem>
            <FlowListItem>
              <Region Style="ShowcaseListRegion" Width="40px" Height="40px">
                <Label Style="ShowcaseListLabel" Text="4" Width="100%" Height="100%" TextAlignment="Center" />
              </Region>
            </FlowListItem>
            <FlowListItem>
              <Region Style="ShowcaseListRegion" Width="100px" Height="70px">
                <Label Style="ShowcaseListLabel" Text="5" Width="100%" Height="100%" TextAlignment="Center" />
              </Region>
            </FlowListItem>
            <FlowListItem>
              <Region Style="ShowcaseListRegion" Width="70px" Height="50px">
                <Label Style="ShowcaseListLabel" Text="6" Width="100%" Height="100%" TextAlignment="Center" />
              </Region>
            </FlowListItem>
            <FlowListItem>
              <Region Style="ShowcaseListRegion" Width="110px" Height="95px">
                <Label Style="ShowcaseListLabel" Text="7" Width="100%" Height="100%" TextAlignment="Center" />
              </Region>
            </FlowListItem>
            <FlowListItem>
              <Region Style="ShowcaseListRegion" Width="50px" Height="60px">
                <Label Style="ShowcaseListLabel" Text="8" Width="100%" Height="100%" TextAlignment="Center" />
              </Region>
            </FlowListItem>
            <FlowListItem>
              <Region Style="ShowcaseListRegion" Width="60px" Height="90px">
                <Label Style="ShowcaseListLabel" Text="9" Width="100%" Height="100%" TextAlignment="Center" />
              </Region>
            </FlowListItem>
            <FlowListItem>
              <Region Style="ShowcaseListRegion" Width="75px" Height="75px">
                <Label Style="ShowcaseListLabel" Text="10" Width="100%" Height="100%" TextAlignment="Center" />
              </Region>
            </FlowListItem>
            <FlowListItem>
              <Region Style="ShowcaseListRegion" Width="50px" Height="80px">
                <Label Style="ShowcaseListLabel" Text="11" Width="100%" Height="100%" TextAlignment="Center" />
              </Region>
            </FlowListItem>
            <FlowListItem>
