<Showcase_Frame>
  <Frame Style="ShowcasePanel">
    <Group Alignment="Top" Orientation="Vertical" Spacing="30px" Margin="60,30,60,30" ContentAlignment="Center">
      <Label Style="ShowcaseHeader" Text="Frame" TextAlignment="Center" AdjustToText="Width" />
      <Label Style="ShowcaseDescription" Text="A content view that automatically adjusts its size to its content." AdjustToText="Width" TextAlignment="Center" />

      <Frame Style="Window" ContentMargin="20px">
        <Region Id="ResizableRegion" Width="150px" Height="150px" BackgroundColor="Gray70">
          <Label Text="Region" TextAlignment="TopLeft" Alignment="TopLeft" FontSize="12" Offset="5,5,0,0" />
          <Button Text="Resize" Click="ResizeRegion" Width="100" />
        </Region>
      </Frame>
    </Group>
  </Frame>

  <ViewAnimation Id="ResizeRegionAnimation">
    <Animate Field="ResizableRegion.Width" To="300" Duration="0.4s"/>
    <Animate Field="ResizableRegion.Height" To="300" Duration="0.4s"/>
  </ViewAnimation>

</Showcase_Frame>
