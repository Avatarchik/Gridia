<Showcase_HyperLink>
  <Frame Style="ShowcasePanel">
    <Group Alignment="Top" Orientation="Vertical" Spacing="30px" Margin="60,30,60,30" ContentAlignment="Center">
      <Label Style="ShowcaseHeader" Text="HyperLink" TextAlignment="Center" AdjustToText="Width" />
      <Label Style="ShowcaseDescription" Text="Displays clickable text." AdjustToText="Width" TextAlignment="Center" />
      <HyperLink Text="Clickable link" FontSize="28" AdjustToText="Width" Click="LinkClick" />
      <Label Text="Link clicked [b]{LinkClickCount}[/b] times" FontSize="16" AdjustToText="Width" />
    </Group>    
  </Frame>
</Showcase_HyperLink>
