<Showcase_CheckBox>
  <Frame Style="ShowcasePanel">
    <Group Alignment="Top" Orientation="Vertical" Spacing="30px" Margin="60,30,60,30" ContentAlignment="Center">
      <Label Style="ShowcaseHeader" Text="CheckBox" AdjustToText="Width" TextAlignment="Center" />
      <Label Style="ShowcaseDescription" Text="A box that can be ticked." AdjustToText="Width" TextAlignment="Center" />
      <Group Id="CheckBoxGroup" Orientation="Vertical" Spacing="2px" ContentAlignment="Left">
        <CheckBox Text="First check box" Click="CheckBoxClick" />
        <CheckBox Text="Second check box" Click="CheckBoxClick" />
        <CheckBox Text="Third check box" Click="CheckBoxClick" />
        <Label Text="Boxes checked: [b]{CheckedCount}[/b]" FontSize="16" AdjustToText="Width" />
      </Group>      
    </Group>
  </Frame> 
</Showcase_CheckBox>