<Showcase_Slider>
  <Frame Style="ShowcasePanel">
    <Group Alignment="Top" Orientation="Vertical" Spacing="30px" Margin="60,30,60,30" ContentAlignment="Center">
      <Label Style="ShowcaseHeader" Text="Slider" TextAlignment="Center" AdjustToText="Width" />
      <Label Style="ShowcaseDescription" Text="Slider with a handle that can be moved with the mouse." AdjustToText="Width" TextAlignment="Center" />
      <Group Orientation="Horizontal" Spacing="30" ContentAlignment="Bottom">
        <Group Orientation="Vertical">
          <Slider Id="Slider1" />
          <Label Text="{Slider1.Value:0} %" Width="100" TextAlignment="Center" />
        </Group>
        <Group Orientation="Vertical">
          <Slider Id="Slider2" Orientation="Vertical" Min="20" Max="180" Value="50" />
          <Label Text="{Slider2.Value:0.0}" Width="100" TextAlignment="Center" />
        </Group>
      </Group>
    </Group>
  </Frame>
</Showcase_Slider>
