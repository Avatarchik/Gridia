<Showcase_Mask>
  <Frame Style="ShowcasePanel">
    <Group Alignment="Top" Orientation="Vertical" Spacing="30px" Margin="60,30,60,30" ContentAlignment="Center">
      <Label Style="ShowcaseHeader" Text="Mask" TextAlignment="Center" AdjustToText="Width" />
      <Label Style="ShowcaseDescription" Text="Content view that masks its content using its background image." AdjustToText="Width" TextAlignment="Center" />
      <Group Orientation="Horizontal" Spacing="25px">
        <Group Orientation="Vertical" ContentAlignment="Left">
          <Label Text="Masked" AdjustToText="Width" />
          <Mask Width="180" Height="180" BackgroundColor="Gray80">
            <Region Alignment="Left" Margin="20" Width="250px" Height="180px" BackgroundColor="Gray70">
              <Label Text="Content Region" TextAlignment="TopLeft" Alignment="TopLeft" FontSize="12" Offset="5,5,0,0" />
            </Region>
          </Mask>
        </Group>
        <Group Orientation="Vertical" ContentAlignment="Left">
          <Label Text="Not Masked" AdjustToText="Width" />
          <Region Width="180" Height="180" BackgroundColor="Gray80">
            <Region Alignment="Left" Margin="20" Width="250px" Height="180px" BackgroundColor="Gray70">
              <Label Text="Content Region" TextAlignment="TopLeft" Alignment="TopLeft" FontSize="12" Offset="5,5,0,0" />
            </Region>
          </Region>
        </Group>
      </Group>
    </Group>
  </Frame>
</Showcase_Mask>
