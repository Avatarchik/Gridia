<Showcase_DataGrid>
  <Frame Style="ShowcasePanel">
    <Group Alignment="Top" Orientation="Vertical" Spacing="30px" Margin="60,30,60,30" ContentAlignment="Center">
      <Label Style="ShowcaseHeader" Text="DataGrid" TextAlignment="Center" AdjustToText="Width" />
      <Label Style="ShowcaseDescription" Text="Arranges static or dynamic content in a grid." AdjustToText="Width" TextAlignment="Center" />
      <TabPanel Height="500px" Width="600px">
        <Tab Title="Dynamic" TabLength="200px">
          <DataGrid Width="100%" Margin="25px" ShowHeaders="True" Items="{Highscores}" TextAlignment="Left" SortColumnIndex="2" Alignment="Top">
            <RowDefinition>
              <ColumnDefinition Width="*" Header="Player" Text="{Item.Player}">
                <Group Orientation="Horizontal" Spacing="18" Alignment="Left">
                  <Image Style="ShowcaseButtonContent" />
                  <Label Text="{Item.Player}" AdjustToText="Width" />
                </Group>
              </ColumnDefinition>
              <ColumnDefinition Width="*" Header="Level" Text="{Item.Level}" />
              <ColumnDefinition Width="*" Header="Score" Text="{Item.Score}" />
            </RowDefinition>
          </DataGrid>
        </Tab>
        
        <Tab Title="Static" TabLength="200px">
          <DataGrid Width="100%" Alignment="Top" Margin="25px">
            <RowDefinition Height="30px">
              <ColumnDefinition Width="125px" Header="C1" />
              <ColumnDefinition Width="75px" Header="C2" />
              <ColumnDefinition Width="*" Header="C3" />
            </RowDefinition>

            <Row>
              <Column Text="First" />
              <Column Text="Second" />
              <Column Text="Third" />
            </Row>
            <Row>
              <Column Text="Hello" />
              <Column Text="World" />
              <Column>
                <Group Orientation="Horizontal" Spacing="18" Alignment="Center">
                  <Image Style="ShowcaseButtonContent" />
                  <Label Text="Custom Content" AdjustToText="Width" />
                </Group>
              </Column>
            </Row>
          </DataGrid>
        </Tab>
      </TabPanel>
    </Group>
  </Frame>
</Showcase_DataGrid>