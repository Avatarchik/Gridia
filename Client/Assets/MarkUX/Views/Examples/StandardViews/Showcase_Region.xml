        <Region Width="33.333%" Height="33.333%" BackgroundColor="#ff00cd" Alignment="Center" Margin="2px">
          <Label Text="Center" Width="100%" Height="100%" TextAlignment="Center" ShadowColor="#777777" ShadowDistance="1,-1" />
        </Region>
        <Region Width="33.333%" Height="33.333%" BackgroundColor="#51fa51" Alignment="Right" Margin="2px">
          <Label Text="Right" Width="100%" Height="100%" TextAlignment="Center" ShadowColor="#777777" ShadowDistance="1,-1" />
