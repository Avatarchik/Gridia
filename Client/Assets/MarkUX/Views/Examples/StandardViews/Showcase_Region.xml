          <Label Text="TopRight" Width="100%" Height="100%" TextAlignment="Center" ShadowColor="#777777" ShadowDistance="1,-1" />
        </Region>
        <Region Width="33.333%" Height="33.333%" BackgroundColor="#fffa00" Alignment="Left" Margin="2px">
          <Label Text="Left" Width="100%" Height="100%" TextAlignment="Center" ShadowColor="#777777" ShadowDistance="1,-1" />
