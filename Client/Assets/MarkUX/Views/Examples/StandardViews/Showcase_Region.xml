        <Region Width="33.333%" Height="33.333%" BackgroundColor="#ff51cd" Alignment="BottomLeft" Margin="2px">
          <Label Text="BottomLeft" Width="100%" Height="100%" TextAlignment="Center" ShadowColor="#777777" ShadowDistance="1,-1" />
        </Region>
        <Region Width="33.333%" Height="33.333%" BackgroundColor="#5151cd" Alignment="Bottom" Margin="2px">
          <Label Text="Bottom" Width="100%" Height="100%" TextAlignment="Center" ShadowColor="#777777" ShadowDistance="1,-1" />
        </Region>
        <Region Width="33.333%" Height="33.333%" BackgroundColor="#ff5151" Alignment="BottomRight" Margin="2px">
          <Label Text="BottomRight" Width="100%" Height="100%" TextAlignment="Center" ShadowColor="#777777" ShadowDistance="1,-1" />
        </Region>
