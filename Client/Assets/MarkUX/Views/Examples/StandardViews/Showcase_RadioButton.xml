<Showcase_RadioButton>
  <Frame Style="ShowcasePanel">
    <Group Alignment="Top" Orientation="Vertical" Spacing="30px" Margin="60,30,60,30" ContentAlignment="Center">
      <Label Style="ShowcaseHeader" Text="RadioButton" AdjustToText="Width" TextAlignment="Center" />
      <Label Style="ShowcaseDescription" Text="For presenting one-of-many selection." AdjustToText="Width" TextAlignment="Center" />
      <Group Id="RadioButtonGroup" Orientation="Vertical" Spacing="2px" ContentAlignment="Left">
        <RadioButton Id="First" Text="First radio button" Click="RadioButtonClick" />
        <RadioButton Id="Second" Text="Second radio button" Click="RadioButtonClick" />
        <RadioButton Id="Third" Text="Third radio button" Click="RadioButtonClick" />        
      </Group>
      <Label Text="Radio button selected: [b]{SelectedRadioButton}[/b]" FontSize="16" AdjustToText="Width" />
    </Group>
  </Frame> 
</Showcase_RadioButton>